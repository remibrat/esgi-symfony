{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}

<h1>Liste des livres</h1>

    <a href="{{ path('book_new') }}">Cr√©er un livre</a>

    {% for book in books %}
        <div class="row">
            <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                <span class="card-title">{{ book.name }}</span>
                <p>Average Price : {{ book.averagePrice }}</p>
                </div>
                <div class="card-action">
                <a href="{{ path('book_show', book.getId) }}">Voir</a>
                </div>
            </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}